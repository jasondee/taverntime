<% include ../partials/header %>

<div class="container">
    
<div class="row">
    
<h1 style="text-align: center;">Edit <%= tavern.name %>:</h1>

<div style="width: 30%; margin: 25px auto;">

<form action="/taverns/<%= tavern._id %>/?_method=PUT" method="POST">
    <input class="form-control" type="text" name="tavern[name]" value=" <%= tavern.name %>">
    </div>
    <div class="form-group">
    <input class="form-control" type="number" name="tavern[price]" value="<%= tavern.price %>" min="0.01" step="0.01">
    </div>
    <div class="form-group">
    <input class="form-control" type="text" name="tavern[image]" value=" <%= tavern.image %>">
    </div>
    <div class="form-group">
    <input class="form-control" type="text" name="tavern[description]" value=" <%= tavern.description %>">
    </div>
    <div class="form-group">
    <button class="btn btn-lg btn-primary btn-block">SUBMIT</button>
    </div>
</form>

<a href="/taverns">BACK</a>

</div>

</div>

</div>

<% include ../partials/footer %>

